---
import "../styles/global.css";
---

<section class="py-20 bg-gradient-to-b from-blue-50 to-white">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div class="text-center lg:text-left">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          Save Job Offers With Just One Click
        </h1>
        <p class="text-xl text-gray-600 mb-8 max-w-lg mx-auto lg:mx-0">
          Organize and manage all your job opportunities in one place. Our extension lets you save offers instantly from any job board.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a href="/register" class="px-8 py-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-xl transition-colors duration-200 shadow-lg hover:shadow-xl">
            Get Started Free
          </a>
          <a href="#features" class="px-8 py-4 border-2 border-blue-600 text-blue-600 hover:bg-blue-50 font-semibold rounded-xl transition-colors duration-200">
            Learn More
          </a>
        </div>
        
        <div class="mt-10 flex items-center justify-center lg:justify-start space-x-2 text-sm text-gray-500">
          <div class="flex -space-x-2">
            <div class="h-8 w-8 rounded-full border-2 border-white bg-blue-500"></div>
            <div class="h-8 w-8 rounded-full border-2 border-white bg-green-500 -ml-2"></div>
            <div class="h-8 w-8 rounded-full border-2 border-white bg-yellow-500 -ml-2"></div>
          </div>
          <span>Join 1,000+ professionals already using AutoGrid</span>
        </div>
      </div>
      
      <!-- Grid Illustration -->
      <div class="relative">
        <div class="bg-white p-6 rounded-2xl shadow-2xl border border-gray-100">
          <div class="grid grid-cols-3 gap-3 mb-3">
            <div class="bg-blue-100 rounded-lg p-3 aspect-square flex items-center justify-center">
              <div class="w-8 h-8 bg-blue-500 rounded"></div>
            </div>
            <div class="bg-green-100 rounded-lg p-3 aspect-square flex items-center justify-center">
              <div class="w-8 h-8 bg-green-500 rounded"></div>
            </div>
            <div class="bg-yellow-100 rounded-lg p-3 aspect-square flex items-center justify-center">
              <div class="w-8 h-8 bg-yellow-500 rounded"></div>
            </div>
            <div class="bg-purple-100 rounded-lg p-3 aspect-square flex items-center justify-center">
              <div class="w-8 h-8 bg-purple-500 rounded"></div>
            </div>
            <div class="bg-pink-100 rounded-lg p-3 aspect-square flex items-center justify-center">
              <div class="w-8 h-8 bg-pink-500 rounded"></div>
            </div>
            <div class="bg-indigo-100 rounded-lg p-3 aspect-square flex items-center justify-center">
              <div class="w-8 h-8 bg-indigo-500 rounded"></div>
            </div>
          </div>
          
          <div class="bg-gray-50 p-4 rounded-lg">
            <div class="flex items-center space-x-3 mb-3">
              <div class="h-3 w-3 bg-green-500 rounded-full"></div>
              <div class="h-2 bg-gray-200 rounded-full w-24"></div>
            </div>
            <div class="space-y-2">
              <div class="h-2 bg-gray-200 rounded-full w-full"></div>
              <div class="h-2 bg-gray-200 rounded-full w-5/6"></div>
              <div class="h-2 bg-gray-200 rounded-full w-4/6"></div>
            </div>
          </div>
          
          <div class="absolute -bottom-6 -right-6 bg-blue-600 text-white p-3 rounded-full shadow-xl">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
        </div>
        
        <div class="absolute -bottom-6 -left-6 bg-white p-4 rounded-xl shadow-lg border border-gray-100">
          <div class="flex items-center space-x-2">
            <div class="h-3 w-3 bg-blue-500 rounded-full"></div>
            <span class="text-xs font-medium text-gray-700">Saved to AutoGrid</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>