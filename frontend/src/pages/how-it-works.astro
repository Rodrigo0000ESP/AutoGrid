---
import Layout from '../layouts/Layout.astro';
import FAQ from '../components/FAQ.astro';
import '../styles/global.css';

const chromeExtensionUrl = import.meta.env.PUBLIC_CHROME_EXTENSION_URL || 'https://chromewebstore.google.com/detail/autogrid-job-saver/pnjapkdlcfjednmcakdmgpcaibejfbme?authuser=0&hl=es';

const faqItems = [
  {
    id: 'free-tier',
    question: 'Is there a free tier available?',
    answer: 'Yes, we offer a free tier with full access to all features except to excell download but with a limited usage. No credit card required.'
  },
  {
    id: 'supported-sites',
    question: 'Which job sites are supported?',
    answer: 'We support all major job boards including LinkedIn, Indeed, Glassdoor, Monster, and company career pages, but we allow more than 900 job portals.'
  },
  {
    id: 'data-security',
    question: 'How secure is my data?',
    answer: 'We take security seriously. All your data is encrypted and we never share your information with third parties.'
  },
  {
    id: 'multiple-devices',
    question: 'Can I use AutoGrid on multiple devices?',
    answer: 'Yes, your account syncs across all your devices. Install the extension on any browser and your data will be there.'
  }
];
---

<Layout title="How It Works - Job Tracker | AutoGrid">
  <div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <h1 class="text-3xl font-bold text-gray-900 sm:text-4xl mb-4">How AutoGrid Works</h1>
        <p class="text-lg text-gray-600">Streamline your job search with our powerful automation tools</p>
      </div>

      {/* Workflow Steps */}
      <div class="space-y-16">
        {/* Step 1 */}
        <div class="relative flex items-start">
          <div class="flex-shrink-0 flex h-10 w-10 items-center justify-center rounded-full bg-blue-100 text-blue-700 font-bold text-lg mr-4 mt-1">
            1
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-semibold text-gray-900">Install the AutoGrid Extension (For more automation)</h3>
            <div class="mt-4 bg-white p-6 rounded-lg shadow-sm border border-gray-200">
              <p class="text-gray-700">
                Add the AutoGrid extension to your browser with just one click. It's available for Chrome, Firefox, and Edge.
              </p>
              <div class="mt-4 flex items-center space-x-4">
                <div class="flex-1 border-t-2 border-dashed border-gray-300"></div>
                <a href={chromeExtensionUrl} target="_blank" rel="noopener noreferrer" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700">
                  Get the Extension
                </a>
                <div class="flex-1 border-t-2 border-dashed border-gray-300"></div>
              </div>
            </div>
          </div>
        </div>

        {/* Step 2 */}
        <div class="relative flex items-start">
          <div class="flex-shrink-0 flex h-10 w-10 items-center justify-center rounded-full bg-blue-100 text-blue-700 font-bold text-lg mr-4 mt-1">
            2
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-semibold text-gray-900">Save Jobs from Anywhere</h3>
            <div class="mt-4 bg-white p-6 rounded-lg shadow-sm border border-gray-200">
              <p class="text-gray-700">
                Browse your favorite job boards (LinkedIn, Indeed, Glassdoor, etc.) and in when you are in the job page you are going to apply click save jobs with a single click using our extension.
              </p>
              <div class="mt-4 grid grid-cols-2 md:grid-cols-4 gap-4">
                {['LinkedIn', 'Indeed', 'Glassdoor', 'Monster'].map((site) => {
                  const id = site.toLowerCase();
                  return (
                    <div class="flex items-center justify-center p-3 border border-gray-200 rounded-md bg-gray-50" id={id}>
                      <span class="text-sm font-medium text-gray-700">{site}</span>
                    </div>
                  );
                })}
              </div>
              <p class="mt-4 text-sm text-gray-500">
                We support all major job platforms and company career pages.
              </p>
            </div>
          </div>
        </div>

        {/* Step 3 */}
        <div class="relative flex items-start">
          <div class="flex-shrink-0 flex h-10 w-10 items-center justify-center rounded-full bg-blue-100 text-blue-700 font-bold text-lg mr-4 mt-1">
            3
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-semibold text-gray-900">We Process the Data</h3>
            <div class="mt-4 bg-white p-6 rounded-lg shadow-sm border border-gray-200">
              <p class="text-gray-700">
                Our AI-powered system automatically extracts and organizes all relevant job information, including:
              </p>
              <ul class="mt-3 space-y-2">
                {[
                  'Job title and company',
                  'Job description and requirements',
                  'Salary information',
                  'Application deadline',
                  'Job location and type',
                  'Application link'
                ].map((item, index) => {
                  const itemId = `feature-${index}`;
                  return (
                    <li class="flex items-start" id={itemId}>
                      <svg class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      <span class="text-gray-700">{item}</span>
                    </li>
                  );
                })}
              </ul>
            </div>
          </div>
        </div>

        {/* Step 4 */}
        <div class="relative flex items-start">
          <div class="flex-shrink-0 flex h-10 w-10 items-center justify-center rounded-full bg-blue-100 text-blue-700 font-bold text-lg mr-4 mt-1">
            4
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-semibold text-gray-900">Track Everything in Your Dashboard</h3>
            <div class="mt-4 bg-white p-6 rounded-lg shadow-sm border border-gray-200">
              <p class="text-gray-700">
                All your saved jobs are automatically organized in your personal AutoGrid dashboard, where you can:
              </p>
              <div class="mt-4 grid grid-cols-1 md:grid-cols-3 gap-4">
                {[
                  { 
                    id: 'track-apps',
                    title: 'Track Applications', 
                    desc: 'Monitor the status of each application',
                    icon: 'M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2'
                  },
                  { 
                    id: 'set-reminders',
                    title: 'Modify your saved jobs', 
                    desc: 'You can modify your saved jobs in your dashboard',
                    icon: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z'
                  },
                  { 
                    id: 'export',
                    title: 'Export your saved jobs', 
                    desc: 'You can export your saved jobs to excel for future insights',
                    icon: 'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z'
                  }
                ].map((feature) => (
                  <div class="p-4 border border-gray-200 rounded-lg" id={feature.id}>
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center">
                        <svg class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={feature.icon} />
                        </svg>
                      </div>
                      <div class="ml-4">
                        <h4 class="font-medium text-gray-900">{feature.title}</h4>
                        <p class="text-sm text-gray-500">{feature.desc}</p>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>

        {/* Step 5 */}
        <div class="relative flex items-start">
          <div class="flex-shrink-0 flex h-10 w-10 items-center justify-center rounded-full bg-blue-100 text-blue-700 font-bold text-lg mr-4 mt-1">
            5
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-semibold text-gray-900">Get Hired Faster</h3>
            <div class="mt-4 bg-gradient-to-r from-blue-50 to-indigo-50 p-8 rounded-lg border border-blue-100">
              <div class="text-center">
                <h3 class="text-2xl font-bold text-gray-900 mb-4">Ready to streamline your job search?</h3>
                <p class="text-gray-700 mb-6">Join thousands of job seekers who found their dream jobs with AutoGrid</p>
                <div class="flex flex-col sm:flex-row justify-center gap-4">
                  <a href="/register" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700">
                    Get Started for Free
                  </a>
                  <a href="/pricing" class="inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                    View Pricing
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      {/* FAQ Section */}
      <FAQ items={faqItems} />
    </div>
  </div>

  <script is:inline>
    // Simple Alpine.js for FAQ accordion
    document.addEventListener('alpine:init', () => {
      Alpine.data('faq', () => ({
        open: false
      }));
    });
  </script>
</Layout>
