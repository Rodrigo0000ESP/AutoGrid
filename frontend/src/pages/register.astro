---
import AuthLayout from '../layouts/AuthLayout.astro';
import '../styles/global.css';

const title = 'Create your account';
const description = 'Start organizing your job search today';

// Check if user is logged in - using a more reliable check
let isLoggedIn = false;
if (typeof window !== 'undefined') {
  const ltk = localStorage.getItem('autogrid_token');
  const stk = sessionStorage.getItem?.('autogrid_token');
  const token = ltk || stk || '';
  // Check if token exists and is not empty
  isLoggedIn = !!token && token.length > 10;
}
---

<script is:inline>
  // Check if the script is already loaded
  if (!window.registerScriptLoaded) {
    window.registerScriptLoaded = true;
    
    // Check auth status on client side
    const checkAuth = () => {
      const ltk = localStorage.getItem('autogrid_token');
      const stk = sessionStorage.getItem('autogrid_token');
      const token = ltk || stk || '';
      const isAuthed = !!token && token.length > 10;
      
      // If not on the register page but we have a token, redirect to dashboard
      if (isAuthed && window.location.pathname === '/register') {
        window.location.href = '/dashboard';
        return false;
      }
      return isAuthed;
    };
    
    // Run check on page load
    checkAuth();
    
    // Load register script if needed
    if (!checkAuth()) {
      const script = document.createElement('script');
      script.type = 'module';
      script.src = '/scripts/register.js';
      document.head.appendChild(script);
    }
  }
</script>

<AuthLayout {title} {description}>
      <div class="mb-4">
        <a href="/" class="inline-flex items-center text-sm text-gray-600 hover:text-gray-900">
          <svg class="h-5 w-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Home
        </a>
      </div>
      <form id="registerForm" class="mt-4 space-y-6">
        <div class="rounded-md shadow-sm -space-y-px">
          <div>
            <label for="username" class="sr-only">Username</label>
            <input
              id="username"
              name="username"
              type="text"
              required
              class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm"
              placeholder="Username"
            />
          </div>
          <div>
            <label for="email" class="sr-only">Email address</label>
            <input
              id="email"
              name="email"
              type="email"
              autocomplete="email"
              required
              class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm"
              placeholder="Email address"
            />
          </div>
          <div>
            <label for="password" class="sr-only">Password</label>
            <input
              id="password"
              name="password"
              type="password"
              required
              class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm"
              placeholder="Password"
              onfocus="document.getElementById('password-requirements').classList.remove('hidden')"
            />
          </div>
          <div>
            <label for="confirmPassword" class="sr-only">Confirm Password</label>
            <input
              id="confirmPassword"
              name="confirmPassword"
              type="password"
              required
              class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm"
              placeholder="Confirm Password"
            />
          </div>
          
        </div>
        <div id="password-requirements" class="mt-2 w-full bg-gray-50 border border-gray-200 rounded-md p-3 text-sm text-gray-600">
          <p class="font-medium mb-2 text-gray-800">Password must include:</p>
          <ul class="space-y-2">
            <li class="flex items-start">
              <svg class="h-4 w-4 text-green-500 mt-0.5 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>At least 8 characters</span>
            </li>
            <li class="flex items-start">
              <svg class="h-4 w-4 text-green-500 mt-0.5 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Uppercase & lowercase letters</span>
            </li>
            <li class="flex items-start">
              <svg class="h-4 w-4 text-green-500 mt-0.5 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>At least one number</span>
            </li>
            <li class="flex items-start">
              <svg class="h-4 w-4 text-green-500 mt-0.5 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Special character (e.g., !@#$%^&*)</span>
            </li>
          </ul>
        </div>

        <div class="flex items-center">
          <input
            id="terms"
            name="terms-of-service"
            type="checkbox"
            required
            class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
          />
          <label for="terms-of-service" class="ml-2 block text-sm text-gray-900">
            I agree to the <a href="/terms-of-service" class="text-blue-600 hover:text-blue-500">Terms of Service</a> and <a href="/privacy-policy" class="text-blue-600 hover:text-blue-500">Privacy Policy</a>
          </label>
        </div>

        <div id="registerError" class="hidden"></div>

        <div>
          <button
            id="registerSubmit"
            type="submit"
            class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed"
          >
            <span class="absolute left-0 inset-y-0 flex items-center pl-3">
              <svg class="h-5 w-5 text-blue-500 group-hover:text-blue-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
              </svg>
            </span>
            Create Account
          </button>
        </div>
      </form>
      
      <div class="mt-6 text-center text-sm">
        <p class="text-gray-600">
          Already have an account?{' '}
          <a href="/login" class="font-medium text-blue-600 hover:text-blue-500">
            Sign in
          </a>
        </p>
      </div>
    </AuthLayout>
